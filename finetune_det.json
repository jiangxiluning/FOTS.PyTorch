{
    "name": "finetune_det_new",
    "cuda": true,
    "gpus": 2,
    "precision": 32,
    "backbone_weights": "./vision-0.9.0",
    "pretrain": "/home/luning/dev/projects/FOTS.PyTorch/saved/pretrain_reg_freeze_det/checkpoints/epoch=5-step=429999.ckpt",
    "freeze_det": false,
    "data_loader": {
        "dataset":"icdar2015",
        "data_dir": "/data/ocr/det/icdar2015/detection",
        "batch_size": 8,
        "shuffle": true,
        "workers": 4,
        "max_transcripts_pre_batch": 16,
        "size": 640,
        "scale": 0.25
    },
    "validation": {

        "scales": [800, 1000, 1333]
    },
    "lr_scheduler": {
        "name": "StepLR",
        "args":
        {
            "gamma": 0.1,
            "step_size": 2000
        }

    },
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001
    },
    "loss": "FOTSLoss",
    "metrics": ["fots_metric"],
    "trainer": {
        "epochs": 3000,
        "save_dir": "saved/",
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min",
        "log_every_n_steps": 1,
        "log_gpu_memory": "all",
        "overfit_batches": 0.0,
        "terminate_on_nan": true,
        "fast_dev_run": false,
        "every_n_train_steps": null,
        "every_n_epochs": 5,
        "check_val_every_n_epoch": 10,
        "save_top_k": 2
    },
    "arch": "FOTSModel",
    "model": {
        "mode": "detection",
        "recognizer": {
            "dropout": 0.2,
            "max_width": 80
        }
    }
}
