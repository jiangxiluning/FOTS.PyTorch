{
    "name": "FOTS",
    "cuda": false,
    "gpus": [0, 1, 2, 3],
    "data_loader": {
        "dataset":"icdar2015",
        "data_dir": "/Users/luning/Dev/data/icdar/icdar2015/4.4/training",
        "batch_size": 4,
        "shuffle": true,
        "workers": 0
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },

    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 10000,
    "lr_scheduler": {
            "gamma": 0.94
    },
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 1e-5
    },
    "loss": "FOTSLoss",
    "metrics": ["my_metric", "my_metric2"],
    "trainer": {
        "epochs": 100000,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "arch": "FOTSModel",
    "model": {
        "mode": "united"
    }
}
